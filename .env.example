# ===========================================
# ELGASMI.EU - Configuration Environment
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# ===========================================
# DATABASE
# ===========================================
DATABASE_URL=mysql://user:password@localhost:3306/elgasmi_db

# ===========================================
# SECURITY (REQUIRED FOR DEPLOYMENT)
# ===========================================
# JWT Secret for session cookies (min 32 chars)
JWT_SECRET=your-super-secure-jwt-secret-key-min-32-chars

# Encryption key for sensitive data in database (min 32 chars)
# Generate with: openssl rand -base64 48
ENCRYPTION_KEY=your-super-secure-encryption-key-min-32-chars

# ===========================================
# AUTHENTICATION
# ===========================================
OAUTH_SERVER_URL=https://oauth.example.com
OWNER_OPEN_ID=your-owner-open-id

# ===========================================
# API KEYS
# ===========================================
BUILT_IN_FORGE_API_URL=https://api.example.com
BUILT_IN_FORGE_API_KEY=your-forge-api-key

# ===========================================
# APPLICATION
# ===========================================
VITE_APP_ID=elgasmi-eu
NODE_ENV=development

# ===========================================
# CORS (comma-separated origins)
# ===========================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://elgasmi.eu

# ===========================================
# EMAIL NOTIFICATIONS (choose one provider)
# ===========================================
# Notification recipient
NOTIFICATION_EMAIL=asmaewarter5@gmail.com

# Option 1: Resend (recommended - https://resend.com)
RESEND_API_KEY=re_your_api_key

# Option 2: SendGrid (https://sendgrid.com)
SENDGRID_API_KEY=SG.your_api_key
SMTP_USER=your-sendgrid-verified-email@domain.com

# Option 3: Mailgun (https://mailgun.com)
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=mg.yourdomain.com

# ===========================================
# STRIPE PAYMENT (optional)
# ===========================================
STRIPE_PUBLISHABLE_KEY=pk_test_your_key
STRIPE_SECRET_KEY=sk_test_your_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ===========================================
# PAYPAL PAYMENT (optional)
# ===========================================
PAYPAL_CLIENT_ID=your_client_id
PAYPAL_CLIENT_SECRET=your_client_secret
PAYPAL_MODE=sandbox

# ===========================================
# ANALYTICS (optional)
# ===========================================
VITE_ANALYTICS_ENDPOINT=https://analytics.example.com
VITE_ANALYTICS_WEBSITE_ID=your-website-id

# API Backend URL (for deployment)
VITE_API_BASE_URL=https://your-backend-url.com
